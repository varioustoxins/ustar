{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo fmt",
      "type": "shell",
      "command": "cargo",
      "args": ["fmt"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "cargo clippy",
      "type": "shell", 
      "command": "cargo",
      "args": ["clippy", "--all-targets", "--all-features", "--", "-D", "warnings"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "pre-commit",
      "type": "shell",
      "command": "uv",
      "args": ["tool", "run", "pre-commit", "run", "--all-files"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always", 
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "format and lint",
      "dependsOrder": "sequence",
      "dependsOn": ["cargo fmt", "cargo clippy"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}